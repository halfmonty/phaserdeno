{
  "tasks": {
    "dev": { "dependencies": ["buildgame:watch", "runserver"] },
    "runserver": "deno run --allow-all --watch main.ts",
    "buildgame": "deno run --allow-all build.ts",
    "buildgame:watch":"deno run --allow-all build.ts --watch"
  },
  "imports": {
    "@enable3d/phaser-extension": "npm:@enable3d/phaser-extension@^0.26.1",
    "hono": "jsr:@hono/hono@^4.8.3",
    "@std/assert": "jsr:@std/assert@1",
    "phaser3-rex-plugins": "npm:phaser3-rex-plugins"
  },
  "compilerOptions": {
    "lib": [
      "deno.window", "deno.ns"
    ]
  },
  "fmt": {
    "singleQuote": true,
    "useTabs": true
  }
}
